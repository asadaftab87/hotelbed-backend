{
  "name": "hotelbed-backend",
  "version": "1.0.0",
  "description": "TypeScript Node.js Express Backend with Service-Repository Architecture",
  "main": "dist/app.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development NODE_OPTIONS='--max-old-space-size=20480 --expose-gc' ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/app.ts",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/app.ts",
    "start:prod": "cross-env NODE_ENV=production node -r tsconfig-paths/register dist/app.js",
    "build": "npm run clean && tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "pm2": "pm2 start npm --name hotelbed-backend -- run serve",
    "watch": "tsc -w",
    "clean": "rm -rf dist",
    "create-db": "ts-node -r tsconfig-paths/register scripts/createDatabase.ts",
    "create-tables": "ts-node -r tsconfig-paths/register scripts/createTables.ts",
    "reset-db": "ts-node -r tsconfig-paths/register scripts/resetDatabase.ts",
    "fix-destinations": "ts-node -r tsconfig-paths/register scripts/fixDestinationNames.ts",
    "verify-aurora": "ts-node -r tsconfig-paths/register scripts/verifyAuroraSetup.ts",
    "enable-s3": "ts-node -r tsconfig-paths/register scripts/enableS3Integration.ts",
    "enable-s3-terminal": "ts-node -r tsconfig-paths/register scripts/enableS3Terminal.ts",
    "check-s3-procedure": "ts-node -r tsconfig-paths/register scripts/checkS3Procedure.ts",
    "diagnose-s3": "ts-node -r tsconfig-paths/register scripts/diagnoseS3Issue.ts",
    "fix-s3": "ts-node -r tsconfig-paths/register scripts/fixS3WithoutFeature.ts",
    "find-instances": "ts-node -r tsconfig-paths/register scripts/findAuroraInstances.ts",
    "wait-check-s3": "ts-node -r tsconfig-paths/register scripts/waitAndCheckS3.ts",
    "check-roles": "ts-node -r tsconfig-paths/register scripts/checkAttachedRoles.ts",
    "try-auto-role": "ts-node -r tsconfig-paths/register scripts/tryAutoGeneratedRole.ts",
    "test-s3": "ts-node -r tsconfig-paths/register scripts/testS3Direct.ts",
    "test-s3-aurora": "ts-node -r tsconfig-paths/register scripts/testS3AuroraConnection.ts"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "mysql",
    "redis",
    "swagger"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.922.0",
    "@types/node-cron": "^3.0.11",
    "adm-zip": "^0.5.16",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.6.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fast-csv": "^5.0.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "node-cron": "^4.2.1",
    "redis": "^4.6.12",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
