{
  "name": "hotel-bed-backend",
  "type": "commonjs",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/app.ts",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/app.ts",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/app.ts",
    "start:prod": "node dist/src/app.js",
    "serve": "node --max-old-space-size=8192 dist/src/app.js",
    "build": "npm run clean && npm run build-ts && npm run keys",
    "build-ts": "tsc",
    "keys": "cpx \"keys/**/*\" dist/keys",
    "clean": "rimraf ./dist",
    "pm2": "pm2 start npm --name hotelbed-backend -- run serve",
    "seed": "prisma db seed",
    "generate": "prisma generate",
    "migrate": "prisma migrate dev --name init",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "create:type": "ts-node-dev ./src/joi.types.ts",
    "test": "jest --detectOpenHandles --forceExit"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "author": "Zuhaib Ghori",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@sendgrid/mail": "^8.1.5",
    "adm-zip": "^0.5.16",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^4.6.0",
    "joi": "^17.13.3",
    "joi-to-typescript": "^4.15.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^8.18.1",
    "mysql2": "^2.2.5",
    "node-cron": "^4.2.1",
    "ora": "^9.0.0",
    "passport": "^0.7.0",
    "progress": "^2.0.3",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.17.18",
    "@types/node": "^24.0.4",
    "@types/passport": "^1.0.17",
    "@types/progress": "^2.0.7",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "cpx": "^1.5.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "fsevents": "^2.3.3",
    "chokidar": "^3.5.3"
  }
}
